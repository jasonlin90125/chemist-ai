{
    "name": "chemist-ai",
    "version": "0.1.0",
    "private": true,
    "description": "AI-powered molecular engineering platform",
    "scripts": {
        "start": "concurrently \"npm run start:frontend\" \"npm run start:backend\"",
        "start:frontend": "npm run dev --prefix frontend",
        "start:backend": "cd backend && uvicorn app.main:app --reload",
        "install:all": "npm install && npm install --prefix frontend && pip install -r backend/requirements.txt",
        "build": "npm run build --prefix frontend"
    },
    "devDependencies": {
        "concurrently": "^8.2.2"
    }
}